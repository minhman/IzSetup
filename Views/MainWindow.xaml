<Window x:Class="IzSetup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:IzSetup"
        xmlns:views="clr-namespace:IzSetup.Views"
        Title="IzSetup" Height="700" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5" FontFamily="Segoe UI" FontSize="12">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding WindowTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding ScreenTitle}" FontSize="14" Foreground="#E8F0F7" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" Margin="0">
            <ContentPresenter x:Name="ContentArea"/>
        </Border>

        <!-- Footer with Navigation Buttons -->
        <Border Grid.Row="2" Background="White" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding GoBackCommand}" 
                            IsEnabled="{Binding CanGoBack}"
                            Content="← Back" Padding="15,8" Margin="0,0,10,0"
                            Background="#E8E8E8" Foreground="#333333"
                            BorderThickness="1" BorderBrush="#CCCCCC"/>

                    <Button x:Name="ForwardButton" 
                            Command="{Binding GoForwardCommand}" 
                            IsEnabled="{Binding CanGoForward}"
                            Content="Next →" Padding="15,8" Margin="0,0,10,0"
                            Background="#0078D4" Foreground="White"
                            BorderThickness="0"/>

                    <Button x:Name="FinishButton"
                            Command="{Binding FinishCommand}"
                            Content="Finish" Padding="15,8"
                            Background="#27AE60" Foreground="White"
                            BorderThickness="0"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
