<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AssemblyName>IzSetup</AssemblyName>
    <RootNamespace>IzSetup</RootNamespace>
    <Version>1.0.0</Version>
    <Authors>IzSetup Contributors</Authors>
    <Description>Bulk software installation tool using Windows Package Manager</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="System.Text.Json" Version="8.1.0" />
  </ItemGroup>

</Project>
